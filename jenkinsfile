pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/YisraelBerman/escape-room.git'
            }
        }
        stage('Build') {
            steps {
                // Run a simple shell command
                sh 'echo "Hello, Jenkins! this is a test"'
            }
        }
    }
    post {
        always {
            // Clean up the workspace
            cleanWs()
               
           
        }
    }
}

